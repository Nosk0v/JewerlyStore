<Window x:Class="JewerlyStore.View.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JewerlyStore.View"
        mc:Ignorable="d"
        Title="Authorization" Height="400" Width="300" ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="16">
            <Label Content="Логин"></Label>
            <TextBox Name="tbLogin"></TextBox>
            <Label Content="Пароль"></Label>
            <PasswordBox Name="tbPassword"></PasswordBox>
            <Button Content="Войти в аккаунт" Margin="0 8 0 0" Click="OnSignClick"></Button>
        </StackPanel>
    </Grid>
</Window>
